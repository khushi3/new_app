<%# Conditionally set remote: true. Also, passing model name as data attribute %>
<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(@movie, remote: remote, html: {role: :form, 'data-model' => 'movie'}) do |f| %>

    <% if @movie.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this person from being saved:</h2>

          <ul>
            <% @movie.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%# Added Bootstrap classes, and help-block container for error messages %>
    <div class="form-group">
      <%= f.label :title, class: 'control-label' %><br>
      <%= f.text_field :name, class: 'form-control' %>
      <span class="help-block"></span>
    </div>

    <%# Added Bootstrap classes, and help-block container for error messages %>
    <div class="form-group">
      <%= f.label :Realese_Year, class: 'control-label' %><br>
      <%= f.text_field :realese, class: 'form-control' %>
      <span class="help-block"></span>
    </div>
    <div class="form-group">
      <%= f.label :Lead_Role, class: 'control-label' %><br>
      <%= f.text_field :actor, class: 'form-control' %>
      <span class="help-block"></span>
    </div>
    <div class="form-group">
      <%= f.label :Director, class: 'control-label' %><br>
      <%= f.text_field :director, class: 'form-control' %>
      <span class="help-block"></span>
    </div>
    <div class="form-group">
      <%= f.label :Rating, class: 'control-label' %><br>
      <%= f.text_field :rating, class: 'form-control' %>
      <span class="help-block"></span>
    </div>

    <%# Added Bootstrap classes %>
    <div class="actions">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    </div>

<% end %>
